<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.eteczl.placartruco.MainActivity">

    <GridLayout
        android:layout_width="379dp"
        android:layout_height="501dp"
        android:layout_marginTop="-6dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/lblElesPlacar"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblNos"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_row="0"
            android:text="NÃ³s:"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblNosPlacar"
            android:layout_width="78dp"
            android:layout_height="50dp"
            android:layout_column="4"
            android:layout_row="0"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lblEles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Eles:"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnMaisUmNos"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="3"
            android:layout_row="1"
            android:onClick="nosMaisUm"
            android:text="+ 1" />

        <Button
            android:id="@+id/btnMaisUm"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="elesMaisUm"
            android:text="+ 1" />

        <Button
            android:id="@+id/btnMaisTres"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="elesMaisTres"
            android:text="+ 3" />

        <Button
            android:id="@+id/btnNosMaisTres"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="nosMaisTres"
            android:text="+ 3" />

        <Button
            android:id="@+id/btnNosMaisSeis"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="nosMaisSeis"
            android:text="+ 6" />

        <Button
            android:id="@+id/btnElesMaisSeis"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="elesMaisSeis"
            android:text="+ 6" />

        <Button
            android:id="@+id/btnNosMaisNove"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="nosMaisNove"
            android:text="+ 9" />

        <Button
            android:id="@+id/btnElesMaisNove"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="elesMaisNove"
            android:text="+ 9" />

        <Button
            android:id="@+id/btnNosMaisDoze"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="3"
            android:layout_row="5"
            android:onClick="nosMaisDoze"
            android:text="+ 12" />

        <Button
            android:id="@+id/btnElesDoze"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_column="0"
            android:layout_row="5"
            android:onClick="elesMaisDoze"
            android:text="+ 12" />

        <Button
            android:id="@+id/btnZerar"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:onClick="novoJogo"
            android:text="0" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
